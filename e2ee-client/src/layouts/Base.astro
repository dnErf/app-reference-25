<script>
import { initFlowbite } from 'flowbite'
window.onload = function() {
	initFlowbite()

	// console.log(document.cookie)
	// console.log(someCookie("token"))
}

function someCookie(name) {
	let c = `; ${document.cookie}`
	let v =  c.split(`; ${name}=`)
	return v.length >= 2
		? v.pop().split(";").shift()
		: ""
}
</script>

