{% comment %} 
accepts:
    - item: {liquid object} product
{% endcomment %}

{% if item and item != empty %}
    <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <a href="#">
            <img 
                class="p-8 rounded-t-lg" 
                alt="{{ item.featured_media.alt }}"
                src="{{ item.featured_media | image_url }}" 
                height="{{ item.featured_media.height }}"
                width="{{ item.featured_media.width }}" 
            />
        </a>
        <div class="px-5 pb-5">
            <a href="#">
                <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">
                    {{ item.title }}
                </h5>
            </a>
            <div class="flex items-center justify-between">
                <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ item.price | money }}</span>
                {% form 'product', item %}
                    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Add to cart
                    </button>
                {% endform %}
            </div>
        </div>
    </div>
    
{% endif %}